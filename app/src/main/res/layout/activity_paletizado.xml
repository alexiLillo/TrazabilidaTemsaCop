            android:textSize="12sp"
            android:text="Desde "
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99-09-2016 08:30 hrs"
            android:textSize="12sp"
            android:id="@+id/txtTurnoInicio"
            />

        <TextView
            android:layout_marginLeft="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Hasta "
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99-09-2016 08:30 hrs"
            android:textSize="12sp"
            android:id="@+id/txtTurnoFinal"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spinerPTerminado"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="10sp" />

        <Spinner
            android:id="@+id/spinerMarca"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="10sp" />

        <Spinner
            android:id="@+id/spinerCliente"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="10sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="19sp"
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:text="Operador"
            android:textSize="15sp"
            android:textColor="#000000"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:id="@+id/txtOperador"
            android:textAlignment="textStart"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="19sp"
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:text="Control Calidad"
            android:textSize="15sp"
            android:textColor="#000000"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:id="@+id/txtCCalidad"
            android:textAlignment="textStart"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
