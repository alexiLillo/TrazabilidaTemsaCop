<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_seleccion__final"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="cl.fosforos.trazabilidadtemc.Seleccion_Final">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_marginLeft="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Turno "
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="A"
            android:id="@+id/txtTurno"
            />

        <TextView
            android:layout_marginLeft="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Desde "
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99-09-2016 08:30 "
            android:textSize="12sp"
            android:id="@+id/txtTurnoInicio"
            />

        <TextView
            android:layout_marginLeft="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Hasta "
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99-09-2016 08:30 "
            android:textSize="12sp"
            android:id="@+id/txtTurnoFinal"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="19sp"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="Línea"
            android:textSize="15sp"
            android:textColor="#000000"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:id="@+id/txtlinea"
            android:textAlignment="textStart"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="19sp"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="Producto Base"
            android:textSize="15sp"
            android:textColor="#000000"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:id="@+id/txtproducto"
            android:textAlignment="textStart"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="19sp"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="Máquina"
            android:textSize="15sp"
            android:textColor="#000000"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:id="@+id/txtmaquina"
            android:textAlignment="textStart"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="19sp"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="Hora Inicio"
            android:textSize="15sp"
            android:textColor="#000000"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:id="@+id/txthorainicio"
            android:textAlignment="textStart"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="19sp"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="Código Caja"
            android:textSize="15sp"
            android:textColor="#000000"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:id="@+id/txtcaja"
            android:textAlignment="textStart"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="19sp"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="Código Operador"
            android:textSize="15sp"
            android:textColor="#000000"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  "
            android:textSize="15sp"
            android:id="@+id/txtoperador"
            android:textAlignment="textStart"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="90sp"
        android:layout_marginRight="90sp">

        <Button
            android:layout_marginTop="15sp"
            android:text="Capturar Codigo QR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/botLeerQR"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="10sp"
            android:layout_width="65sp"
            android:layout_height="wrap_content"
            android:text="Arqueado"
            android:textSize="15sp"
            android:textColor="#000000"
            />

        <EditText
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:id="@+id/txtarqueado"
            android:inputType="number"
            android:maxLength="4"
            />

        <TextView
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="Curvo"
            android:textSize="15sp"
            android:textColor="#000000"
            />

        <EditText
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:id="@+id/txtcurvo"
            android:inputType="number"
            android:maxLength="4"
            />

        <TextView
            android:layout_width="44sp"
            android:layout_height="wrap_content"
            android:text="Color"
            android:textSize="15sp"
            android:textColor="#000000"
            />

        <EditText
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:id="@+id/txtcolor"
            android:inputType="number"
            android:maxLength="4"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="10sp"
            android:layout_width="65sp"
            android:layout_height="wrap_content"
            android:text="Angosto"
            android:textSize="15sp"
            android:textColor="#000000"
            />

        <EditText
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:id="@+id/txtangosto"
            android:inputType="number"
            android:maxLength="4"
            />

        <TextView
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:text="Largo"
            android:textSize="15sp"
            android:textColor="#000000"
            />

        <EditText
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:id="@+id/txtlargo"
            android:inputType="number"
            android:maxLength="4"
            />

        <TextView
            android:layout_width="44sp"
            android:layout_height="wrap_content"
            android:text="Ancho"
            android:textSize="15sp"
            android:textColor="#000000"
            />

        <EditText
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:id="@+id/txtancho"
            android:inputType="number"
            android:maxLength="4"
            />
    </LinearLayout>

    <Button
        android:text="Grabar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/botGrabar"
        android:layout_marginTop="40sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="12sp"
            android:id="@+id/txtTurnoCodigo"
            android:visibility="invisible"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/12/1234"
            android:textSize="12sp"
            android:id="@+id/txtDiaProceso"
            android:visibility="invisible"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:textSize="12sp"
            android:id="@+id/txtcodLinea"
            android:visibility="invisible"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:textSize="12sp"
            android:id="@+id/txtcodproducto"
            android:visibility="invisible"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:textSize="12sp"
            android:id="@+id/txtcodmaquina"
            android:visibility="invisible"
            />
    </LinearLayout>
</LinearLayout>
