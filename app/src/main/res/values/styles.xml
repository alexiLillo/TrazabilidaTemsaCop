    <style name="ButtonAppearance" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
